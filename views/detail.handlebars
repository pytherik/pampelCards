        <h1 id="card-question">{{ card.question }}</h1>  
        <h5 class="card-description">{{ card.description }}</h5>
        <hr class="card-line">
        <span id="card-category">Kategorie: {{ card.category }}</span>
      </div>
      <div>
      {{{ card.sanitizedHtml }}}
      </div>
    </div>
    <div class="button-footer">
