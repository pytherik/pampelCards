<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PampelCards</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
  {{!-- <div class="header"> --}}
    <nav>
      <div class="nav-bar">
        <ul class="nav-list">
          <li class="nav-item">
            <a class="" href="/">
              <img class="profilePic" src="{{ user.profilePic }}" alt="">
            </a>
          </li>
          <li class="nav-item"><a href="/">Willkommen {{ user.username }}</a></li>
          <li class="nav-item"><a href="/">Startseite</a></li>
          {{#if categories}}
          {{!-- <label for="learn">Frag mich ab</label> --}}
          <select name="learn" id="learn" onChange="window.location.href=this.value">
            <option value="/card/categories/all" selected>Alle Kategorien</option>
            {{#each categories}}
            <option value="/card/categories/{{this}}">{{ this }}</option>
            {{/each}}
          </select>
          {{/if}}
          <li class="nav-item"><a href="/card/newCard">Neue Karte Erstellen</a></li>
          <li class="nav-item"><a href="/logout"><img class="logout-icon" src="/images/icons/logout2.png" alt=""></a></li>
        </ul>
      </div>
    </nav>
    <div class="header">
      <h1 id="welcome">{{ header }}</h1>
      <hr class="line">
    </div>
  {{!-- </div> --}}
      
  {{{body}}}
    
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="/js/app.js"></script>
  </body>
</html>