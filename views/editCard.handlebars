 <div class="home-container">
  <div class="cardInput-container">
    <div>
      <span class="errorMessage">{{ errorMessage }}</span>
    </div>
    <div class="cardFormContainer">
  <form action="/card/{{ _id }}?_method=PUT" method="POST">
        <div class="cardInputContainer">
          <label class="privateLabel" for="private">Privat</label>
          {{#if private}}
          <input type="checkbox" id="private" name="private" value="true" checked>
          {{else}}
          <input type="checkbox" id="private" name="private" value="true">
          {{/if}}
          <br>
          {{!-- <label class="cardLabel" for="category">Kategorie</label><br> --}}
          <input class="cardInput" type="text" name="category" id="category" list="categories" placeholder="Kategorie" value="{{ category }}" required>
          <datalist id="categories">
            {{#each categories}}
            <option value="{{ this }}">{{ this }}</option>
            {{/each}}
          </datalist>
        </div>
        <div class="cardInputContainer">
          {{!-- <label class="cardLabel" for="question">Frage</label><br> --}}
          <input class="cardInput" type="text" name="question" id="question" placeholder="Frage" value="{{ question }}" required>
        </div>
        <div class="cardInputContainer">
          {{!-- <label class="cardLabel" for="description">Beschreibung</label><br> --}}
          <input class="cardInput" type="text"  name="description" id="description" placeholder="Beschreibung" value="{{ description }}">
        </div>
          <div class="cardInputContainer">
            {{!-- <label class="cardLabel" for="markdown">Antwort (md)</label><br> --}}
            <textarea class="textarea" name="answerMd" id="markdown" placeholder="Du musst hier schon irgendwas reinschreiben...">{{ answerMd }}</textarea>
          </div>
        <div class="button-footer">
        </div>
        <div>
          <a href="/card/categories/{{ category }}" class="button btn-blue">Abbruch</a>
          <button type="submit" class="button btn-green saveAndGo">Speichern</button>
        </div>
        </form>
        <form action="/card/{{ _id }}?_method=DELETE" method="POST">
          <button type="submit" class="button btn-red">LÃ¶schen</button>
        </form>
    </div>
  </div>
</div>
