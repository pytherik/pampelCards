<div class="container">
  <h1 class="mb-4">Bearbeiten</h1>
  <span class="errorMessage">{{ errorMessage }}</span>
  <form action="/card/{{ _id }}?_method=PUT" method="POST">
    <div class="form-group">
    <label for="category">Kategorie</label>
    <input type="text" name="category" id="category" class="form-control" list="categories" value="{{category}}" required>
    <datalist id="categories">
      {{#each categories}}
      <option value="{{ this }}">{{ this }}</option>
      {{/each}}
    </datalist>
  </div>
    <div class="form-group">
    <label for="question">Frage</label>
    <input type="text" name="question" id="question" class="form-control" value="{{ question }}" required>
  </div>
  <div class="form-group">
    <label for="description">Beschreibung</label>
    <input type="text"  name="description" id="description" class="form-control" value="{{ description }}">
  </div>
  <div class="form-group">
    <label for="markdown">Antwort (md)</label>
    <textarea  name="answerMd" id="markdown" class="form-control textarea">{{ answerMd }}</textarea>
  </div>

  <a href="/card" class="btn btn-secondary">Abbruch</a>
  <button type="submit" class="btn btn-success saveAndGo">Speichern</button>
  </form>
</div>
