{{#each cards}}
<div class="home-container">
  <div class="card-container">
    <div id="question-container" class="task-container">
      <div class="random-question">
        <hr class="card-line">
        <h3 id="list-question">{{ this.question }}</h3>  
        <hr class="card-line">
        <span id="card-category">Kategorie: {{ this.category }}</span>
      </div>
      <div>
      <h5 class="">{{ this.description }}</h5>
      {{!-- {{{ this.sanitizedHtml }}} --}}
      </div>
    </div>
    <div class="button-footer">
      <a class="button btn-blue" href="/card/detail/{{this._id}}">zeig alles</a>
    </div>
  </div>
</div>
{{/each}}
